  <h1 class="text-3xl font-bold mb-2">{{ title }}</h1>
  <p class="text-gray-600">{{ date }}</p>
</div>
{% endblock %}

{% block main %}
<article class="max-w-4xl mx-auto px-4 py-10 prose dark:prose-invert">
    {{content|safe}}
</article>
{% endblock %}