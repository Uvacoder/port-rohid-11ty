---
layout: base.njk
---

<div class="blog-layout">
  <header>
    <div class="container">
      <h1 class="title">{{ title }}</h1>
      <p class="info">
        <span>Published at {{ date | formatDate }}</span>
        <span>â€¢</span>
        <span>{{ content | readingTime }}</span>
      </p>
      <figure>
        <img src="{{ coverPhoto }}" alt="Cover Photo" class="cover-photo" />
      </figure>
    </div>
  </header>

  <main>
    <div class="container">
      <article class="prose">{{content|safe}}</article>
    </div>
  </main>
</div>
